<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/selecione_jogador_TextView"
        android:visibility="gone"
        android:text="Selecione o jogador"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/jogadores_ListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>

    <Button
        android:id="@+id/adicionarJogador_Button"
        android:text="@string/criar_jogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="criarJogador"/>

</LinearLayout>